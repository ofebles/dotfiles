[workspace-to-monitor-force-assignment]
1 = 'built-in'
2 = 'built-in'
3 = 'built-in'
4 = 'built-in'
5 = 'built-in'
6 = ['DELL S2722QC', 'secondary']
7 = ['DELL S2722QC', 'secondary']
8 = ['DELL S2722QC', 'secondary']
9 = ['DELL S2722QC', 'secondary']
10 = ['DELL S2722QC', 'secondary']


